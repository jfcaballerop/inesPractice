<p id="notice"><%= notice %></p>

<h1>Textnotes</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @textnotes.each do |textnote| %>
      <tr>
        <td><%= textnote.content %></td>
        <td><%= textnote.usuario_id %></td>
        <td><%= link_to 'Show', textnote %></td>
        <td><%= link_to 'Edit', edit_textnote_path(textnote) %></td>
        <td><%= link_to 'Destroy', textnote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Textnote', new_textnote_path %>
